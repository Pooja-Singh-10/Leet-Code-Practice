class Solution {
    int minDist(int a[], int n, int x, int y) {
        int idx1=-1, idx2=-1;
        int minDist = Integer.MAX_VALUE;
        
        for(int i=0;i<n; i++)
        {
            if(a[i]==x)
            {
                idx1=i;//0
            }
            else if(a[i]==y)
            {
                idx2=i;//1
            }
            
          if(idx1!=-1 && idx2!=-1)
            {
                minDist= Math.min(minDist, Math.abs(idx1-idx2));
            }
        }
        
        if(idx1==-1 || idx2==-1)
        {
            return -1;
        }
        return minDist;
    }
}
